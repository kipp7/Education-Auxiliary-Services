{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "03-importer/question-ir.schema.json",
  "title": "Question IR v0",
  "type": "object",
  "required": ["id", "type", "stem", "answer", "source"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "enum": ["single", "multi", "judge", "blank", "essay"] },
    "stem": { "type": "string", "minLength": 1 },
    "options": { "type": "array", "items": { "$ref": "#/$defs/Option" }, "minItems": 2 },
    "answer": { "$ref": "#/$defs/Answer" },
    "analysis": { "type": "string" },
    "score": { "type": "number" },
    "difficulty": { "type": "string" },
    "categoryPath": { "type": "string" },
    "source": { "$ref": "#/$defs/Source" }
  },
  "allOf": [
    {
      "if": { "properties": { "type": { "enum": ["single", "multi"] } } },
      "then": { "required": ["options"] }
    }
  ],
  "$defs": {
    "Option": {
      "type": "object",
      "required": ["key", "text"],
      "properties": {
        "key": { "type": "string", "minLength": 1 },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    },
    "Answer": {
      "type": "object",
      "required": ["value"],
      "properties": { "value": { "type": "string" } },
      "additionalProperties": false
    },
    "Source": {
      "type": "object",
      "required": ["filePath"],
      "properties": {
        "filePath": { "type": "string", "minLength": 1 },
        "lineStart": { "type": "integer", "minimum": 1 },
        "lineEnd": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
