
page{
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  background: #f6f7fb;
}
.container {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
} 
.remind-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 300rpx;
}
.remind-img {
  width: 250rpx;
  height: 250rpx;
  padding-bottom: 25rpx;
}

.banner {
  background: linear-gradient(135deg, #1bd0ad 0%, #0ea5e9 100%);
  border-radius: 18rpx;
  padding: 22rpx 22rpx;
  color: #fff;
  box-shadow: 0 12rpx 26rpx rgba(27, 208, 173, 0.18);
}

.banner-title {
  font-size: 34rpx;
  font-weight: 800;
}

.banner-desc {
  margin-top: 8rpx;
  font-size: 26rpx;
  opacity: 0.9;
}
