page{
  background: #f6f7fb;
}

.page {
  padding: 24rpx;
}

.card {
  display: flex;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: 0 12rpx 30rpx rgba(17,24,39,0.06);
}

.thumb {
  width: 200rpx;
  height: 140rpx;
  background: #f3f4f6;
}

.content {
  flex: 1;
  padding: 18rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  line-height: 1.3;
}

.meta {
  margin-top: 10rpx;
  color: #6b7280;
  font-size: 24rpx;
}

.empty {
  padding: 80rpx 0;
  text-align: center;
  color: #9ca3af;
}

