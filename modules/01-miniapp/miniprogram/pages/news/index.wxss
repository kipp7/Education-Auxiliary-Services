.page {
  padding: 24rpx;
}

.list {
  margin-top: 16rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.title {
  font-size: 32rpx;
  font-weight: 800;
  color: #111827;
  line-height: 1.3;
}

.meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.5;
}
