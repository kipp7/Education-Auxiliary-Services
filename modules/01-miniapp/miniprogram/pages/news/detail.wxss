.page {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.title {
  font-size: 36rpx;
  font-weight: 900;
  color: #111827;
  line-height: 1.3;
}

.meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.content {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
  white-space: pre-line;
}
