page {
  background: #f6f7fb;
}

.page {
  padding: 24rpx 28rpx 40rpx;
}

.card {
  background: #ffffff;
  border-radius: 22rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.hero {
  width: 100%;
  height: 320rpx;
}

.title {
  padding: 22rpx 22rpx 0;
  font-size: 34rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.88);
}

.content {
  padding: 18rpx 22rpx 28rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.65);
  line-height: 1.7;
}

.empty {
  padding: 120rpx 0;
  text-align: center;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.82);
}

.empty-desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.55);
}

