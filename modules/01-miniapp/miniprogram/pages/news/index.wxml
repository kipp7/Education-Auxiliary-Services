<!-- pages/news/index.wxml -->
<view class="page">
  <view class="header">
    <view class="title">资讯</view>
    <view class="subtitle">运营内容与学习建议（Mock）</view>
  </view>

  <view class="list" wx:if="{{newsList.length}}">
    <view class="item" wx:for="{{newsList}}" wx:key="id" data-action="{{item.action}}" bindtap="handleAction">
      <view class="body">
        <view class="item-title">{{item.title}}</view>
        <view class="item-desc">{{item.desc}}</view>
      </view>
      <view class="chevron">></view>
    </view>
  </view>

  <view class="empty" wx:else>
    <view class="empty-title">暂无资讯</view>
    <view class="empty-desc">后续可接入运营内容与详情页</view>
  </view>
</view>
