<view class="page">
  <view class="card" wx:for="{{list}}" wx:key="id" data-id="{{item.id}}" bindtap="goDetail">
    <image class="thumb" src="{{item.cover}}"></image>
    <view class="content">
      <view class="title">{{item.title}}</view>
      <view class="meta">{{item.time}}</view>
    </view>
  </view>
  <view class="empty" wx:if="{{list.length < 1}}">
    <text>暂无资讯</text>
  </view>
</view>

