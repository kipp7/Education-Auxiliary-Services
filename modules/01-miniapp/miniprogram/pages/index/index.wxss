/** pages/index/index.wxss **/

.page {
  width: 100%;
  min-height: 100vh;
  background: #f6f7fb;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, 'Microsoft Yahei',
    sans-serif;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 64rpx 32rpx 28rpx;
  background: linear-gradient(180deg, #1bd0ad 0%, #12c3a3 60%, rgba(246, 247, 251, 0) 100%);
}

.brand {
  margin-bottom: 22rpx;
}

.brand-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.brand-subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.92);
}

.profile {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 24rpx;
  padding: 22rpx 22rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 18rpx 40rpx rgba(27, 208, 173, 0.18);
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 96rpx;
  background: rgba(27, 208, 173, 0.1);
}

.profile-text {
  flex: 1;
  margin-left: 18rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.85);
  line-height: 1.2;
}

.profile-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.chevron {
  color: rgba(0, 0, 0, 0.25);
  font-size: 44rpx;
  padding-left: 8rpx;
}

.content {
  padding: 12rpx 32rpx 40rpx;
  flex: 1;
}

.banner-swiper {
  height: 280rpx;
  margin: 6rpx 0 18rpx;
  position: relative;
}

.banner-swiper .wx-swiper-dots {
  bottom: 18rpx;
}

.banner-swiper .wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 999rpx;
}

.banner-swiper .wx-swiper-dot-active {
  width: 18rpx;
}

.banner {
  position: relative;
  height: 280rpx;
  border-radius: 22rpx;
  overflow: hidden;
  box-shadow: 0 14rpx 28rpx rgba(0, 0, 0, 0.08);
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 150rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.55) 100%);
}

.banner-title {
  position: absolute;
  left: 22rpx;
  right: 22rpx;
  bottom: 56rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: rgba(255, 255, 255, 0.96);
}

.stage {
  margin: 6rpx 0 18rpx;
  padding: 18rpx;
  background: rgba(255, 255, 255, 0.96);
  border-radius: 22rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.stage-label {
  font-size: 26rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.7);
}

.stage-chips {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
}

.stage-chip {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  color: rgba(0, 0, 0, 0.7);
  font-size: 24rpx;
}

.stage-chip.active {
  background: rgba(27, 208, 173, 0.14);
  color: rgba(27, 208, 173, 0.95);
  font-weight: 700;
}

.conversion {
  display: flex;
  gap: 14rpx;
  margin: 0 0 22rpx;
}

.conversion-card {
  flex: 1;
  padding: 18rpx 18rpx;
  border-radius: 22rpx;
  background: #ffffff;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.conversion-card:active {
  opacity: 0.92;
}

.conversion-card.primary {
  background: linear-gradient(135deg, #1bd0ad 0%, #19c0ff 100%);
  box-shadow: 0 16rpx 30rpx rgba(27, 208, 173, 0.22);
}

.conversion-card.bound {
  border: 2rpx solid rgba(27, 208, 173, 0.28);
}

.conversion-title {
  font-size: 30rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.85);
}

.conversion-card.primary .conversion-title {
  color: rgba(255, 255, 255, 0.98);
}

.conversion-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 1.4;
}

.conversion-card.primary .conversion-desc {
  color: rgba(255, 255, 255, 0.86);
}

.today {
  margin: 0 0 22rpx;
  padding: 18rpx 18rpx 16rpx;
  border-radius: 22rpx;
  background: rgba(255, 255, 255, 0.96);
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.today-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.today-title {
  font-size: 28rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.82);
}

.today-meta {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.today-bar {
  height: 14rpx;
  border-radius: 999rpx;
  background: rgba(27, 208, 173, 0.12);
  overflow: hidden;
  margin-top: 14rpx;
}

.today-bar-inner {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #1bd0ad 0%, #19c0ff 100%);
}

.today-foot {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.today-tip {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.today-cta {
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(27, 208, 173, 0.95);
}

.section-title {
  margin: 16rpx 0 18rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.72);
}

.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18rpx;
}

.card {
  background: #ffffff;
  border-radius: 22rpx;
  padding: 22rpx 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card:active {
  opacity: 0.9;
}

.card-icon {
  width: 84rpx;
  height: 84rpx;
}

.card-title {
  margin-top: 12rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.85);
}

.card-desc {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.card-desc.disabled {
  color: rgba(0, 0, 0, 0.32);
}

.h-list {
  margin: 4rpx -32rpx 0;
  padding: 0 0 6rpx 32rpx;
  height: 380rpx;
}

.h-list-inner {
  display: flex;
  gap: 14rpx;
  padding-right: 32rpx;
}

.h-item {
  width: 280rpx;
  height: 360rpx;
  flex-shrink: 0;
  background: #ffffff;
  border-radius: 22rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
}

.h-item:active {
  opacity: 0.92;
}

.h-cover {
  width: 100%;
  height: 160rpx;
  background: rgba(27, 208, 173, 0.12);
  display: block;
  flex-shrink: 0;
}

.h-title {
  padding: 16rpx 18rpx 0;
  font-size: 28rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.85);
  line-height: 1.25;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.h-subtitle {
  padding: 8rpx 18rpx 0;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  line-height: 1.35;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.h-meta {
  padding: 12rpx 18rpx 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.badge {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: rgba(27, 208, 173, 0.95);
  background: rgba(27, 208, 173, 0.12);
}

.price {
  font-size: 24rpx;
  font-weight: 800;
  color: rgba(255, 77, 79, 0.95);
}

.v-list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.v-item {
  background: #ffffff;
  border-radius: 22rpx;
  padding: 18rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.v-item:active {
  opacity: 0.92;
}

.v-body {
  flex: 1;
  min-width: 0;
}

.v-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.85);
}

.v-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.news-item {
  background: #ffffff;
  border-radius: 22rpx;
  padding: 18rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 14rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.news-item:active {
  opacity: 0.92;
}

.news-body {
  flex: 1;
  min-width: 0;
}

.news-title {
  font-size: 28rpx;
  font-weight: 800;
  color: rgba(0, 0, 0, 0.85);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.news-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.warrant .white .action-btn::after {
  border: none;
}

.warrant .white {
  width: 600rpx;
  min-height: 560rpx;
  background-color: #fff;
  border-radius: 18rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 1000;
  padding: 18rpx 24rpx 24rpx;
}

.warrant .white .pictrue {
  background-image: url('https://bmob-cdn-24322.bmobcloud.com/2019/07/25/f6e77de940d2441180ade9cacb7daf13.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 400rpx;
  height: 270rpx;
  margin: 10rpx auto 0 auto;
}

.warrant .white .tip {
  font-size: 30rpx;
  color: #8a8a8a;
  text-align: center;
  margin-top: 14rpx;
  padding: 0 30rpx;
}

.warrant .white .tap {
  text-align: center;
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: 700;
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 44rpx;
  padding: 0 8rpx;
}

.warrant .white .action-btn {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 999rpx;
}

.warrant .white .no {
  background-color: #fff;
  color: #1bd0ad;
  border: 1rpx solid #1bd0ad;
}

.warrant .white .but {
  background-color: #1bd0ad;
  color: #fff;
}



.warrant .mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
}

