@import "../../app.wxss";

/* 页面内只保留结构样式，通用卡片/标题已在 app.wxss */
page {
  background: #f6f7fb;
}

.header {
  padding: 28rpx 24rpx 0;
}

.brand {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.app-name {
  font-size: 44rpx;
  font-weight: 800;
  color: #111827;
}

.app-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.brand-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 999rpx;
  background: #e5e7eb;
}

.avatar-text {
  font-size: 26rpx;
  color: #111827;
}

.hero {
  position: relative;
  margin-top: 18rpx;
  height: 210rpx;
  border-radius: 18rpx;
  overflow: hidden;
}

.hero-bg {
  width: 100%;
  height: 210rpx;
}

.hero-mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0));
}

.hero-text {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #fff;
}

.hero-title {
  font-size: 36rpx;
  font-weight: 700;
}

.hero-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  opacity: 0.92;
}

.grid {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 24rpx 0;
  background: #fff;
  border-radius: 18rpx;
  padding: 22rpx 10rpx;
}

.grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #111827;
}

.grid-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 10rpx;
}

.grid-text {
  font-size: 26rpx;
}

.section {
  margin-top: 18rpx;
  padding: 0 24rpx;
}

.section-hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 12rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
}

.section-more {
  font-size: 26rpx;
  color: #1bd0ad;
}

.card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 20rpx;
  background: #fff;
  border-radius: 18rpx;
  margin-bottom: 16rpx;
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.vip {
  font-size: 22rpx;
  color: #fff;
  background: #111;
  padding: 2rpx 10rpx;
  border-radius: 999rpx;
}

.card-sub {
  margin-top: 8rpx;
  color: #6b7280;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.sep {
  color: #d1d5db;
}

.arrow {
  width: 28rpx;
  height: 28rpx;
}

.news-card {
  display: flex;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
}

.news-thumb {
  width: 220rpx;
  height: 150rpx;
  background: #f3f4f6;
}

.news-body {
  flex: 1;
  padding: 18rpx;
}

.news-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.3;
}

.news-meta {
  margin-top: 10rpx;
  color: #6b7280;
  font-size: 24rpx;
}

