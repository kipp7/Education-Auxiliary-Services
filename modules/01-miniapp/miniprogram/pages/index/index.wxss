/** pages/index/index.wxss **/

page {
  width: 100%;
  height: 100%;
  background: #f6f7fb;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, 'Microsoft Yahei',
    sans-serif;
}

.page {
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 64rpx 32rpx 28rpx;
  background: linear-gradient(180deg, #1bd0ad 0%, #12c3a3 60%, rgba(246, 247, 251, 0) 100%);
}

.brand {
  margin-bottom: 22rpx;
}

.brand-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #ffffff;
  letter-spacing: 2rpx;
}

.brand-subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.92);
}

.profile {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 24rpx;
  padding: 22rpx 22rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 18rpx 40rpx rgba(27, 208, 173, 0.18);
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 96rpx;
  background: rgba(27, 208, 173, 0.1);
}

.profile-text {
  flex: 1;
  margin-left: 18rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.85);
  line-height: 1.2;
}

.profile-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.chevron {
  color: rgba(0, 0, 0, 0.25);
  font-size: 44rpx;
  padding-left: 8rpx;
}

.content {
  padding: 12rpx 32rpx 40rpx;
  flex: 1;
}

.section-title {
  margin: 16rpx 0 18rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.72);
}

.grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18rpx;
}

.card {
  background: #ffffff;
  border-radius: 22rpx;
  padding: 22rpx 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card:active {
  opacity: 0.9;
}

.card-icon {
  width: 84rpx;
  height: 84rpx;
}

.card-title {
  margin-top: 12rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.85);
}

.card-desc {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.55);
}

.card-desc.disabled {
  color: rgba(0, 0, 0, 0.32);
}

button::after {
  border: none;
}

.warrant .white {
  width: 600rpx;
  min-height: 560rpx;
  background-color: #fff;
  border-radius: 18rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 1000;
  padding: 18rpx 24rpx 24rpx;
}

.warrant .white .pictrue {
  background-image: url('https://bmob-cdn-24322.bmobcloud.com/2019/07/25/f6e77de940d2441180ade9cacb7daf13.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 400rpx;
  height: 270rpx;
  margin: 10rpx auto 0 auto;
}

.warrant .white .tip {
  font-size: 30rpx;
  color: #8a8a8a;
  text-align: center;
  margin-top: 14rpx;
  padding: 0 30rpx;
}

.warrant .white .tap {
  text-align: center;
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: 700;
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 44rpx;
  padding: 0 8rpx;
}

.warrant .white button {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 999rpx;
}

.warrant .white .no {
  background-color: #fff;
  color: #1bd0ad;
  border: 1rpx solid #1bd0ad;
}

.warrant .white .but {
  background-color: #1bd0ad;
  color: #fff;
}

.warrant .white .but::after {
  border: none;
}

.warrant .mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 999;
}

