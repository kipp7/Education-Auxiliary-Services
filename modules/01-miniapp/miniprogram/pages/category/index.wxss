/* pages/category/index.wxss */
page {
    background: #f6f7fb;
}

.special-title {
    font-size: 28rpx;
    color: #3f3f3f;
    background: #fff;
    padding: 25rpx 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgba(235,235,235,0.8);
}

.special-title>view {
    display: flex;
    align-items: center;
}

.special-title .icon {
    width: 40rpx;
    height: 40rpx;
    background: #1bd0ad;
    border-radius: 50%;
    color: #fff;
    font-size: 22rpx;
    text-align: center;
    line-height: 40rpx;
}

.special-title .text {
    font-size: 12px;
    color: #a6a6a6;
}

.special-title .direction {
    width: 15rpx;
    height: 27rpx;
}

.special-title text {
    margin-left: 15rpx;
    margin-right: 15rpx;
}

.num {
    color: #9f9f9f;
    font-size: 22rpx;
    margin-left: 50rpx;
}

.remove {
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 24rpx;
    background: #fff;
    margin-top: 20rpx;
}

.switch {
    float: right;
    vertical-align: middle;
    margin-top: -4rpx;
}

.errorstat {
    width: 100%;
    height: 50px;
    position: absolute;
    top: -30%;
    bottom: 0;
    right: 0;
    left: 0;
    margin: auto;
}

.errorstat text {
    color: #999999;
    font-size: 14px;
    width: 100%;
    text-align: center;
    display: inline-block;
}

.button {
    background: #1896ec;
    color: #fff;
    width: 400rpx;
    line-height: 30px;
    font-size: 14px;
    border-radius: 3px;
    text-align: center;
    margin: 24px auto;
    padding: 8rpx;
}
