<!-- pages/favorite/index.wxml -->
<view class="page">
  <view class="header">
    <view class="title">收藏</view>
    <view class="subtitle">本地存储（Mock） · 按题库菜单聚合</view>
  </view>

  <view class="empty" wx:if="{{menuList.length < 1}}">
    <view class="empty-title">暂无收藏</view>
    <view class="empty-desc">做题页点击“收藏”后会出现在这里</view>
    <view class="empty-actions">
      <button class="btn primary" bindtap="goLearn">去练习</button>
    </view>
  </view>

  <view class="list" wx:else>
    <view class="item" wx:for="{{menuList}}" wx:key="cateid" data-cateid="{{item.cateid}}" data-menu="{{item.menu}}" bindtap="goFavoriteDetail">
      <view class="body">
        <view class="item-title">{{item.menu}}</view>
        <view class="item-desc">点击进入收藏题目列表</view>
      </view>
      <view class="chevron">></view>
    </view>
  </view>
</view>
