.page {
  padding: 24rpx;
}

.seg {
  display: flex;
  gap: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.65);
  border-radius: 999rpx;
  background: #f5f6f7;
}

.seg-item.active {
  background: #1bd0ad;
  color: #fff;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 20rpx 0 12rpx;
  color: #111827;
}

.card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.cover {
  width: 220rpx;
  height: 150rpx;
  background: #f3f4f6;
}

.body {
  flex: 1;
  padding: 18rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.3;
}

.desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #1bd0ad;
}
