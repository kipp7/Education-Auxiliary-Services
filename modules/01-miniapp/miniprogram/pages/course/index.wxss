.page {
  padding: 24rpx;
  min-height: 100vh;
  background: #f6f7fb;
}

.seg {
  display: flex;
  gap: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.65);
  border-radius: 999rpx;
  background: #f5f6f7;
}

.seg-item.active {
  background: #1bd0ad;
  color: #fff;
}

.banner {
  border-radius: 18rpx;
  padding: 22rpx;
  background: linear-gradient(135deg, #1bd0ad 0%, #0ea5e9 100%);
  color: #fff;
  box-shadow: 0 12rpx 26rpx rgba(27, 208, 173, 0.18);
}

.banner-title {
  font-size: 34rpx;
  font-weight: 900;
}

.banner-desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  opacity: 0.92;
}

.block {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 12rpx 26rpx rgba(17, 24, 39, 0.06);
}

.block-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 14rpx;
}

.chip {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: #f5f6f7;
  color: rgba(0, 0, 0, 0.7);
  font-size: 26rpx;
}

.chip.active {
  background: rgba(27, 208, 173, 0.15);
  color: #1bd0ad;
  font-weight: 700;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 20rpx 0 12rpx;
  color: #111827;
}

.card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: 0 12rpx 26rpx rgba(17, 24, 39, 0.06);
}

.cover {
  width: 220rpx;
  height: 150rpx;
  background: #f3f4f6;
}

.body {
  flex: 1;
  padding: 18rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.3;
}

.desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #1bd0ad;
}

.meta-row {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.badge {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(27, 208, 173, 0.12);
  color: #1bd0ad;
  font-size: 22rpx;
  font-weight: 700;
  white-space: nowrap;
}

.badge.ghost {
  background: rgba(0, 0, 0, 0.06);
  color: rgba(0, 0, 0, 0.55);
  font-weight: 600;
}
