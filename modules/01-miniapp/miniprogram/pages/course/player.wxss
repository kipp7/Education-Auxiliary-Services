.page {
  padding: 24rpx;
}

.tip {
  background: rgba(27, 208, 173, 0.12);
  color: #065f46;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
}

.mock {
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx;
  margin-bottom: 16rpx;
}

.mock-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.mock-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.mock-meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #1bd0ad;
}

.controls {
  margin-top: 10rpx;
}

.learned {
  margin-top: 10rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
}

.btn::after {
  border: none;
}

.btn.primary {
  background: #1bd0ad;
  color: #fff;
}

.btn.ghost {
  background: #fff;
  color: #111827;
  border: 2rpx solid #e5e7eb;
}

.paywall {
  background: #fff7ed;
  border: 2rpx solid #fed7aa;
  border-radius: 16rpx;
  padding: 18rpx;
  margin-top: 12rpx;
}

.paywall-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #9a3412;
}

.paywall-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #9a3412;
  opacity: 0.9;
}

.paywall-actions {
  margin-top: 12rpx;
}

.slider {
  margin-top: 18rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 12rpx 18rpx 18rpx;
}

.slider-tip {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}
