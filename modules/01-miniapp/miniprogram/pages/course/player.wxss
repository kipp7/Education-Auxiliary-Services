.page {
  padding: 24rpx;
}

.tip {
  background: rgba(27, 208, 173, 0.12);
  color: #065f46;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
}

.mock {
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx;
  margin-bottom: 16rpx;
}

.mock-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.mock-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.mock-meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #1bd0ad;
}

.video {
  width: 100%;
  height: 420rpx;
  background: #111827;
  border-radius: 16rpx;
  overflow: hidden;
}

