/** pages/start/index.wxss **/

.container {
  position: relative;
  height: 100%;
  padding: 0;
  overflow: hidden;
  background: #1bd0ad;
}

.remind-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remind-img {
  width: 120rpx;
  height: 120rpx;
}

.title-wrap {
  position: absolute;
  top: 120rpx;
  left: 0;
  right: 0;
  z-index: 20;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0;
  transform: translate3d(0, -20rpx, 0);
  animation: show-title 1.6s cubic-bezier(0.19, 1, 0.22, 1) 0.35s forwards;
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 2rpx;
  text-shadow: 0 12rpx 22rpx rgba(0, 0, 0, 0.12);
}

.subtitle {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

@keyframes show-title {
  0% {
    opacity: 0;
    transform: translate3d(0, -20rpx, 0);
  }
  100% {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

.content {
  display: none;
}

.stage {
  position: relative;
  width: 100%;
  height: 100%;
}

.hd {
  position: absolute;
  top: 0;
  left: 50%;
  width: 1000rpx;
  height: 55%;
  margin-left: -500rpx;
  transition: all 0.35s ease;
}

.logo {
  position: absolute;
  z-index: 2;
  left: 50%;
  bottom: 230rpx;
  width: 160rpx;
  height: 160rpx;
  margin-left: -80rpx;
  border-radius: 160rpx;
  opacity: 0.95;
  background: rgba(255, 255, 255, 0.35);
  animation: sway 10s ease-in-out infinite;
}

@keyframes sway {
  0% {
    transform: translate3d(0, 20rpx, 0) rotate(-15deg);
  }
  17% {
    transform: translate3d(0, 0rpx, 0) rotate(25deg);
  }
  34% {
    transform: translate3d(0, -20rpx, 0) rotate(-20deg);
  }
  50% {
    transform: translate3d(0, -10rpx, 0) rotate(15deg);
  }
  67% {
    transform: translate3d(0, 10rpx, 0) rotate(-25deg);
  }
  84% {
    transform: translate3d(0, 15rpx, 0) rotate(15deg);
  }
  100% {
    transform: translate3d(0, 20rpx, 0) rotate(-15deg);
  }
}

.wave {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  width: 2250rpx;
  height: 260rpx;
  opacity: 0.72;
  animation: wave 10s linear infinite;
}

.wave-bg {
  z-index: 1;
  opacity: 0.45;
  animation: wave-bg 10.25s linear infinite;
}

@keyframes wave {
  from {
    transform: translate3d(125rpx, 0, 0);
  }
  to {
    transform: translate3d(1125rpx, 0, 0);
  }
}

@keyframes wave-bg {
  from {
    transform: translate3d(375rpx, 0, 0);
  }
  to {
    transform: translate3d(1375rpx, 0, 0);
  }
}

.panel {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 58%;
  padding: 140rpx 56rpx 220rpx;
  background: rgba(255, 255, 255, 0.98);
  border-top-left-radius: 44rpx;
  border-top-right-radius: 44rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  opacity: 0;
  transform: translate3d(0, 80rpx, 0);
  animation: panel-in 0.9s cubic-bezier(0.23, 1, 0.32, 1) 0.5s forwards;
}

@keyframes panel-in {
  from {
    opacity: 0;
    transform: translate3d(0, 80rpx, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

.hint {
  margin: 0 auto 36rpx;
  text-align: center;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.55);
}

.confirm-btn {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 999rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: #1bd0ad;
  color: #ffffff;
  box-shadow: 0 18rpx 40rpx rgba(27, 208, 173, 0.32);
  width: 100%;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn:active {
  opacity: 0.88;
}

.copyright {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 26rpx 30rpx 34rpx;
  text-align: center;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.45);
}
