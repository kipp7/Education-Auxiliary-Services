<!--pages/start/index.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/loading.gif"></image>
  </view>

  <block wx:else>
    <view class="title-wrap">
      <text class="title">{{appName}}</text>
      <text class="subtitle">随练随测 · 查漏补缺</text>
    </view>

    <view class="stage">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="{{userInfo.avatarUrl}}"></image>
        <image class="wave" src="/images/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/images/wave.png" mode="aspectFill"></image>
      </view>

      <view class="panel">
        <view class="spacer"></view>
        <button class="confirm-btn" bindtap="goSign">立即进入</button>
      </view>
    </view>

    <text class="copyright">{{companyName}}</text>
  </block>
</view>
