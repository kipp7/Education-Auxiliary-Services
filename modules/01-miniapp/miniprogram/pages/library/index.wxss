page {
  background: #f6f7fb;
}

.page {
  padding: 24rpx;
}

.seg {
  display: flex;
  gap: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 10rpx;
}

.seg-item {
  flex: 1;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  border-radius: 999rpx;
  background: #f5f6f7;
}

.seg-item.active {
  background: #1bd0ad;
  color: #ffffff;
}

.swiper {
  height: 200rpx;
}

.swiper-item {
  height: 200rpx;
  border-radius: 18rpx;
  padding: 22rpx;
  background: linear-gradient(135deg, #1bd0ad 0%, #0ea5e9 100%);
  color: #fff;
  box-shadow: 0 12rpx 26rpx rgba(27, 208, 173, 0.18);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.swiper-title {
  font-size: 34rpx;
  font-weight: 900;
}

.swiper-desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  opacity: 0.92;
}

.block {
  margin-top: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
}

.block-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 14rpx;
}

.chip {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: #f5f6f7;
  color: rgba(0, 0, 0, 0.7);
  font-size: 26rpx;
}

.chip.active {
  background: rgba(27, 208, 173, 0.15);
  color: #1bd0ad;
  font-weight: 700;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 18rpx 0 12rpx;
  color: #111827;
}

.card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 14rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.card-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.arrow {
  width: 28rpx;
  height: 28rpx;
}
